<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:custom="http://schemas.android.com/apk/res-auto" android:layout_gravity="center" android:paddingLeft="10dp" android:paddingTop="10dp" android:paddingRight="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/AvatarLayout" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:id="@+id/avatar_image" android:background="@drawable/avatar_background" android:layout_width="55dp" android:layout_height="55dp" android:layout_centerInParent="true" android:contentDescription="@string/cd_conversation_avatar"/>
        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/avatar_initials" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/call_log_avatar_initials_hint" android:maxLength="2" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/title_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@id/AvatarLayout">
        <TextView android:id="@+id/latest_chat_author" android:text="@string/messages_contact_hint" android:layout_toLeftOf="@id/last_message_time" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" style="@style/ListItemTitleStyle"/>
        <TextView android:textAppearance="?android:attr/textAppearanceSmall" android:textColor="@color/gray" android:id="@+id/last_message_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/messages_time_hint" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout android:orientation="horizontal" android:id="@+id/subtitle_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_toRightOf="@id/AvatarLayout" android:layout_below="@id/title_layout">
        <TextView android:id="@+id/latest_chat_message" android:text="@string/messages_content_hint" android:maxLines="2" android:minLines="2" android:singleLine="false" android:layout_toLeftOf="@id/message_attachment" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" style="@style/ListItemSubTitleStyle"/>
        <ImageView android:id="@+id/message_attachment" android:layout_width="15dp" android:layout_height="15dp" android:src="@drawable/ic_file_attachment" android:layout_toLeftOf="@id/message_status" android:contentDescription="@string/cd_conversation_attachment"/>
        <ImageView android:id="@+id/message_status" android:layout_width="15dp" android:layout_height="15dp" android:src="@drawable/ic_message_success" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:contentDescription="@string/cd_message_status"/>
    </RelativeLayout>
</RelativeLayout>
