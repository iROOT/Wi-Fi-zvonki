<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" android:padding="5dp" android:baselineAligned="false" style="@style/Layout.WrapHeight">
    <RelativeLayout android:id="@+id/callLayout" android:layout_marginLeft="5dp" android:layout_marginStart="5dp" style="@style/Layout.DistributeWidth">
        <TextView android:textColor="@color/white" android:id="@+id/text1" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentStart="true" style="@style/Layout.Wrap"/>
        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:textColor="@color/white" android:ellipsize="end" android:id="@+id/text2" android:singleLine="true" android:layout_below="@id/text1" android:layout_alignLeft="@id/text1" android:layout_alignStart="@id/text1" style="@style/Layout.Wrap"/>
        <ImageView android:id="@+id/defaultIcon" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_check" android:layout_toRightOf="@id/text2" android:layout_alignTop="@id/text2" android:layout_alignBottom="@id/text2" android:contentDescription="@string/about_copyright" android:layout_toEndOf="@id/text2"/>
    </RelativeLayout>
    <LinearLayout android:gravity="center_vertical" android:id="@+id/actionsLayout" style="@style/Layout.WrapWidth">
        <com.mavenir.android.view.DontPressWithParentImageView android:id="@+id/callButton" android:src="@drawable/ic_action_call_color" style="@style/ListItemActionStyle"/>
        <com.mavenir.android.view.DontPressWithParentImageView android:id="@+id/messageButton" android:src="@drawable/ic_action_message_color" style="@style/ListItemActionStyle"/>
        <com.mavenir.android.view.DontPressWithParentImageView android:id="@+id/groupIndicatorButton" android:visibility="gone" android:src="@drawable/ic_right" style="@style/ListItemActionStyle"/>
    </LinearLayout>
</LinearLayout>
